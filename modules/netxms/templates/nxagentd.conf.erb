#
# This file is managed by Puppet, manual modifications will be over-written!
#

# Configuration file for NetXMS agent

# Basic settings
ListenAddress = *
ListenPort = 4700

# Server comma separated list
MasterServers = <%= @nxagentd_masters %>

# Specify if watchdog should be used
EnableWatchdog = no

# Connection security settings
RequireAuthentication = yes
RequireEncryption = no
SharedSecret = <%= @nxagentd_access_pwd %>

# Proxying related settings
EnableProxy = <%= @nxagentd_proxy_agent %>
EnableSNMPProxy = <%= @nxagentd_proxy_snmp %>
EnableSNMPTrapProxy = <%= @nxagentd_proxy_snmp %>

# Log file location
LogFile = <%= @nxagentd_logfile %>

# Directory for storing files uploaded by server(s)
FileStore = <%= @nxagentd_file_store %>

# Subagents to load
SubAgent = filemgr.nsm
SubAgent = portcheck.nsm

[filemgr]
RootFolder = /var/log
